@model IEnumerable<KTUSTPPBiudzetas.Models.Purchase>

@{
    ViewData["Title"] = "PurchaseList";
}

<h1>PurchaseList</h1>

<p>
    <a asp-action="Create" asp-controller="Purchases" asp-route-CheckId="@ViewData["CheckId"]">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdated)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Purchases" asp-route-id="@item.Id" asp-route-CheckId="@item.CheckId">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="Delete" asp-controller="Purchases" asp-route-id="@item.Id" asp-route-CheckId="@item.CheckId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Checks" asp-action="GetChecks">Back to List</a>
</div>